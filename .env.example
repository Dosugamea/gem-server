# 迺ｰ蠅・ｨｭ螳・ENVIRONMENT=development

# 繧ｵ繝ｼ繝舌・險ｭ螳・SERVER_PORT=8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# 繝・・繧ｿ繝吶・繧ｹ險ｭ螳・DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=gem_db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=10m

# Redis險ｭ螳夲ｼ医が繝励す繝ｧ繝ｳ・・REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT險ｭ螳・JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=24h
JWT_ISSUER=gem-server

# OpenTelemetry險ｭ螳・OTEL_ENABLED=true
OTEL_SERVICE_NAME=gem-server
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
